<configuration>
    <!-- logback-test.xml -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{MM-dd-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="error" />
    <logger name="org.eclipse.persistence" level="error" />
    <logger name="com.example.project" level="trace" />

    <root level="error">
        <appender-ref ref="console" />
    </root>
</configuration>
